<div class="container">
		<section class="main-section contact" id="contact">

			<div class="row">
				<div class="col-lg-6 col-sm-7 wow fadeInLeft">
					<div class="contact-info-box address clearfix">
						<h3><i class=" icon-map-marker"></i>Addresse:</h3>
						<span>22 Allée Darius Milhaud<br>75019 Paris<br>France</span>
					</div>
					<div class="contact-info-box phone clearfix">
						<h3><i class="fa fa-phone"></i>Charles Dacquay</h3>
						<span>06 95 46 60 80</span>
					</div>
					<div class="contact-info-box phone clearfix">
						<h3><i class="fa fa-phone"></i>Félix Gaudé</h3>
						<span>06 28 01 33 40</span>
					</div>
					<ul class="social-link">
						<li class="twitter"><a href="https://twitter.com/project_hacking"><i class="fa fa-twitter"></i></a></li>
						<li class="facebook"><a href="https://www.facebook.com/thehackingproject/"><i class="fa fa-facebook"></i></a></li>
					</ul>
				</div>
				<div class="col-lg-6 col-sm-5 wow fadeInUp delay-05s">
					<div class="form">

						<div id="sendmessage">Tu es inscrit à la newsletter. Merci !</div>
						<div id="errormessage"></div>
						<form action="/gotham" method="post" role="form" class="contactForm">
							<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
							<div class="form-group">
								<h3>Souhaites-tu t'inscrire à la newsletter ?</h3>
							</div>
							<div class="form-group">
								<input type="text" name="name" class="form-control input-text" id="name" placeholder="Ton nom" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
								<div class="validation"></div>
							</div>
							<div class="form-group">
								<input type="email" class="form-control input-text" name="email" id="email" placeholder="exemple@mail.com" data-rule="email" data-msg="Please enter a valid email" />
								<div class="validation"></div>
							</div>

							<div class="text-center"><button type="submit" class="input-btn">Je veux m'inscrire à la newsletter !</button></div>
						</form>
					</div>
				</div>
			</div>
		</section>
	</div>